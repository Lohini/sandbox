<!DOCTYPE html>
<html lang="{$lang}">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

	<meta name="robots" content="{$robots}" n:ifset="$robots">
	<meta name="description" content="{$description}" n:ifset="$description">
	<meta name="keywords" content="{$keywords}" n:ifset="$keywords">

	<title>{ifset $title}{$title|striptags|trim}{$titleSeparator}{/ifset}{$webName}</title>

	<link type="image/png" href="{$basePath}/img/ico/favicon.png" rel="shortcut icon" />
	<link type="image/png" href="{$basePath}/img/ico/favicon.png" rel="icon" />

	{control css 'normalize.css', 'jquery-ui.css', 'site.css', 'print.css'=>'print'}
	{block #css}{/block}

	<script type="text/javascript" src="{$basePath}/js/head.js"></script>
	{control js 'yepnope.js', 'modernizr.js', 'jquery.js', 'jquery.livequery.js', 'jquery-ui.js', 'flash.js'}
	{block #js}{/block}
</head>

<body><!-- global -->
	<div id="flashes" n:snippet="flashMessage">
		<div class="flash {$flash->type}" n:foreach="$flashes as $flash">{!$flash->message}</div>
	</div>
	<div id="content">
		{include #content}
	</div>
</body>
</html>
