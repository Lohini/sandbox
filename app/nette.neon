common:
	php: # PHP configuration
		date.timezone: Europe/Bratislava
	service:
		Nette\Loaders\RobotLoader:
			option:
				directory: [%appDir%, %libsDir%]
			run: true
	variable: #variables
		tempDir: %varDir%

production < common:
development < common:
console < common:
